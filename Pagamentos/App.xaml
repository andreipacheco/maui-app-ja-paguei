<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Pagamentos.Utils"
             x:Class="Pagamentos.App">
    <Application.Resources>
        <ResourceDictionary>
            <local:PagoImageConverter x:Key="PagoImageConverter" />
            <local:BooleanToTextConverter x:Key="BooleanToTextConverter" TrueText="Paga" FalseText="Não Paga" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
