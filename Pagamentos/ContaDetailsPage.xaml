<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pagamentos.ContaDetailsPage"
             Title="Detalhes da Conta"
             BackgroundColor="#FFFFFF">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Detalhes da Conta"
               TextColor="#20C997"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Nome da Conta:"
               TextColor="#20C997"
               FontSize="Medium"
               FontAttributes="Bold" />
        <Label x:Name="ContaNameLabel"
               FontSize="Medium"
               TextColor="#333333" />

        <Label Text="Status de Pagamento:"
               TextColor="#20C997"
               FontSize="Medium"
               FontAttributes="Bold" />
        <Label x:Name="ContaStatusLabel"
               FontSize="Medium"
               TextColor="#333333" />

        <Label Text="Data de Pagamento:"
               TextColor="#20C997"
               FontSize="Medium"
               FontAttributes="Bold" />
        <Label x:Name="ContaDateLabel"
               FontSize="Medium"
               TextColor="#333333" />
    </VerticalStackLayout>
</ContentPage>
